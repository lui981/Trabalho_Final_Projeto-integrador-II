<div class="categdespesas index">
      <h2>Clientes </h2>
    <%= form_tag clientes_path( format:"html"), :method => 'get' do %>  
      <div class="row">
            <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome do Cliente para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>

           <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_cliente_path %>';"><i class="fa fa-plus-circle"></i> Novo Cliente</button></span>
            </div>
        </div>
      </div>
      <%end%>
    </div>
    <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
<thead>
<tr>
<th>COD</th>
<th>Nome</th>
<th>CPF</th>
<th>Endereco</th>
<th>Telefone</th>
<th colspan="4"></th>
</tr>
</thead>

  <tbody>
  <% @clientes.each do |cliente| %>
 <tr>
    <td><%= "%06d"%cliente.id %></td>
      <td><%= cliente.nome %></td>
      <td><%= cliente.cpf %></td>
      <td><%= cliente.endereco %></td>
      <td><%= cliente.telefone %></td>
      <td><%= link_to 'Visualizar', cliente %></td>
      <td><%= link_to 'Alterar', edit_cliente_path(cliente) %></td>   
      <td><%= link_to 'Excluir', cliente, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir o cliente?' } %></td>
    </tr>
  <% end %>
    </tbody>
</table>
</div>
</div>
