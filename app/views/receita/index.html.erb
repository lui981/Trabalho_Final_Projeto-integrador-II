<div class="categdespesas index">
      <h2>Receita</h2>
    <%= form_tag receita_path( format:"html"), :method => 'get' do %>  
      <div class="row">
            <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome do Fornecedor para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>

           <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_receitum_path %>';"><i class="fa fa-plus-circle"></i> Novo Fornecedor</button></span>
            </div>
        </div>
      </div>
      <%end%>
    </div>
    <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
<thead>
<tr>
<th>COD</th>
<th>Paciente</th>
<th>Dosagem</th>
<th>Medicamento</th>
<th colspan="4"></th>
</tr>
</thead>

  <tbody>
  <% @receita.each do |receita| %>
    <tr>
      <td><%= "%06d"%receita.id %></td>
      <td><%= receita.paciente %></td>
      <td><%= receita.dosagem %></td>
      <td><%= receita.medicamento%></td>
      <td><%= link_to 'Visualizar', receita %></td>
      <td><%= link_to 'Alterar', edit_receitum_path(receita) %></td>   
      <td><%= link_to 'Excluir', receita, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir a receita?' } %></td>
    </tr>    <tr>
 
  <% end %>
    </tbody>
</table>
</div>
</div>
