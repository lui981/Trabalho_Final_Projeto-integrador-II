<div class="categdespesas index">
      <h2>Medicamentos </h2>
    <%= form_tag medicamentos_path( format:"html"), :method => 'get' do %>  
      <div class="row">
            <div class="col-lg-5  form-group">  
                <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome do Medicamento para pesquisar" %>  
              </div>
              <div class="col-lg-2 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
              </div>

           <div class="col-lg-2 form-group">  
                  <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_medicamento_path %>';"><i class="fa fa-plus-circle"></i> Novo Medicamento</button></span>
            </div>
        </div>
      </div>
      <%end%>
    </div>
    <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
<thead>
<tr>
<th>COD</th>
<th>Nome</th>
<th>Tipo</th>
<th>Pre√ßo</th>
<th colspan="4"></th>
</tr>
</thead>

  <tbody>
  <% @medicamentos.each do |medicamento| %>
    <tr>
      <td><%= "%06d"%medicamento.id %></td>
      <td><%= medicamento.nome %></td>
      <td><%= medicamento.tipo %></td>
      <td><%= medicamento.preco %></td>
      <td><%= link_to 'Visualizar', medicamento %></td>
      <td><%= link_to 'Alterar', edit_medicamento_path(medicamento) %></td>   
      <td><%= link_to 'Excluir', medicamento, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir o medicamento?' } %></td>
    </tr>
  <% end %>
    </tbody>
</table>
</div>
</div>
