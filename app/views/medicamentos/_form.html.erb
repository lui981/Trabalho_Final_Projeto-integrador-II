<%= form_with(model: medicamento) do |form| %>
  <% if medicamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medicamento.errors.count, "error") %> prohibited this medicamento from being saved:</h2>

      <ul>
        <% medicamento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
       <div class="col-lg-4 form-group">   
           <%= form.label :nome, :class => 'control-label required' %>
           <%= form.text_field :nome,  :class => 'form-control' %>
       </div>

 
      
       <div class="col-lg-4 form-group">   
           <%= form.label :tipo, :class => 'control-label required' %>
           <%= form.text_field :tipo,  :class => 'form-control' %>
       </div>

      
       <div class="col-lg-2 form-group">   
           <%= form.label :quantidade, :class => 'control-label required' %>
           <%= form.number_field :quantidade,  :class => 'form-control' %>
       </div>
      

       
       <div class="col-lg-2 form-group">   
           <%= form.label :estoque, :class => 'control-label required' %>
           <%= form.number_field :estoque,  :class => 'form-control' %>
       </div>
       </div>
       <div class="row">
       <div class="col-lg-3 form-group">   
       <%= form.label :preco, :class => 'control-label required' %>
       <%= form.text_field :preco,  :class => 'form-control' %>
   </div>

  <div class="col-lg-2 form-group">
  <%= form.label :data_validade, :class => 'control-label required' %>
  <%= form.text_field :data_validade,:type =>"date", :class => 'form-control' %>          
  </div>
 
  <div class="col-lg-3 form-group">   
  <%= form.label :fornecedor_id, :class => 'control-label required' %>
  <%= form.collection_select :fornecedor_id, Fornecedor.all, :id, :nome, {:prompt => 'Selecionar'}, :class => 'form-control',:required=>true %> 
</div>
</div>

<div class="row">
<div class="col-lg-7 form-group">  
  <input type="submit" name="commit" class="btn btn-primary colorprimarybtn" value="Salvar " data-disable-with="Salvando" />
  <%= link_to 'Voltar', medicamentos_path, :class => "btn btn-primary colorprimarybtn"%>
</div>
</div>
<% end %>
